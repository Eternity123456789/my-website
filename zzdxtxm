<p3 class="po-left3">有效期剩余</p3>	
	
<div id="timer" class="po-left4"></div>

<style type="text/css">
#time{color:#CC0000 ;font-size:30px;}
</style>
<script>
 var maxtime = 10 * 60; 
      function CountDown() {
        if (maxtime >= 0) {
          minutes = Math.floor(maxtime / 60);
          seconds = Math.floor(maxtime % 60);
          msg = minutes + "分" +seconds + "秒";
          document.all["timer"].innerHTML = "<span id='time'>"+ msg+"</span>";
            --maxtime;
        } else{
          clearInterval(timer);
          alert("时间到，结束!");
        }
      }
      timer = setInterval("CountDown()", 1000);   
 </script>
